; ==================================================
;  MODULES
; ==================================================
[module/bspwm]
type = internal/bspwm
enable-scroll = false

format = <label-state>
format-underline = #e4d2d2d2
format-padding = 1

label-focused = 
label-focused-padding = 1
label-occupied = 
label-occupied-padding = 1
label-empty = 
label-empty-padding = 1
label-urgent = 
label-urgent-padding = 1

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 2

format-online-padding = 2
format-online-underline = #e4d2d2d2
format-online =   <toggle> <icon-stop> <label-song>
label-song = %artist% - %title%

icon-play = 
icon-pause = 
icon-stop = 

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-padding = 2
format-underline = #e4d2d2d2

[module/mem]
type = internal/memory
interval = 2
format-prefix = " "
format-padding = 2
format-underline = #e4d2d2d2
label = %percentage_used% used

[module/clock]
type = internal/date
interval = 1.0
date = %a %b %d
time = %H:%M
label =  %date% %time%

format-underline = #e4d2d2d2
format-padding = 2

[module/fs]
type = internal/fs
mount-0 = /home
mount-1 = /var
interval = 60
fixed-values = true
spacing = 0

format-mounted = <label-mounted>
label-mounted =  %mountpoint% %percentage_used% used
format-mounted-padding = 2
format-mounted-underline = #e4d2d2d2

[module/title]
type = internal/xwindow
label-maxlen = 50

[module/net]
type = internal/network
interface = enp3s0
label-connected =  %downspeed:4%  %upspeed:4%

format-connected-underline = #e4d2d2d2
format-connected-padding = 2
