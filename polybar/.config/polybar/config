[bar/single_bar]
bottom = false

width = 1910
height = 22
offset-x = 5
offset-y = 5

background = #e42d2d2d
foreground = #d2d2d2
line-size = 2

modules-left = bspwm cpu mem mpd
modules-center = title
modules-right = fs clock
module-margin-left = 2
module-margin-right = 0

wm-restack = bspwm
tray-position = right
tray-padding = 2

font-0 = "Noto Mono:size=10;2"
font-1 = "FontAwesome:size=10;2"

